{
	"$schema": "https://biomejs.dev/schemas/1.7.2/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"ignore": ["**/node_modules/**", "**/dist/**"],
			"rules": {
				"style": {
					"noShoutyConstants": "warn",
					"useNamingConvention": "error",
					"noVar": "warn",
					"useTemplate" :"warn",
					"useFilenamingConvention": "error"
				}
		}
	},
	"files": {
		"ignore": ["**/node_modules/**", "**/dist/**"]
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"lineWidth": 80
	}
}
