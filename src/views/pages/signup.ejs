<main  class="w-full h-screen bg-zinc-900 grid place-items-center">
  <form action="/auth/singup" method="post">
    <div class="w-96 bg-zinc-800 p-8 rounded-lg shadow-lg">
      <h1 class="text-2xl font-semibold text-center text-zinc-50">Sing Up</h1>
      <div class="mt-4">
        <label for="username" class="text-zinc-50">Username</label>
        <input type="text" name="username" id="username" class="w-full p-2 mt-1 bg-zinc-700 rounded-lg" required>
      </div>
      <div class="mt-4">
        <label for="email" class="text-zinc-50">Email</label>
        <input type="email" name="email" id="email" class="w-full p-2 mt-1 bg-zinc-700 rounded-lg" required>
      </div>
      <div class="mt-4">
        <label for="password" class="text-zinc-50">Password</label>
        <input type="password" name="password" id="password" class="w-full p-2 mt-1 bg-zinc-700 rounded-lg" required>
      </div>
      <div class="mt-4">
        <button type="submit" class="w-full p-2 bg-zinc-500 text-zinc-50 rounded-lg">Sing Up</button>
      </div>
      <div class="mt-4 text-center">
        <a href="/login" class="text-zinc-50">Already have an account? Login</a>
      </div>
    </div>
  </form>
</main>