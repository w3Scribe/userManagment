{
  "compilerOptions": {
    "strict": true,
    "target": "ES2022",
    "module": "NodeNext",
    "sourceMap": false,
    "noUnusedLocals": true,
    "removeComments": true,
    "noEmitOnError": true,
    "outDir": "dist",
    "lib": ["ES2022"],
    "pretty": true,
    "declaration": true,
    "declarationDir": "/build/types",
    "allowUnusedLabels":false,
    "esModuleInterop": false,
    "moduleResolution": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts", "./*.ts"],
  "exclude": ["node_modules/**/*.ts"]
}