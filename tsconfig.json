{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"esModuleInterop": true,
		"moduleResolution": "NodeNext",
		"removeComments": false,
		"strict": true,
		"noEmitOnError": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"rootDir": ".",
		"outDir": "dist"
	},
	"include": ["src/**/*.ts", "."],
	"exclude": ["node_modules/**/*.ts"]
}
